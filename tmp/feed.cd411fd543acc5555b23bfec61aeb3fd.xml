  justify-content: center;
  padding: 3em 0;
}
.tiny-notes > ul > li {
  width: 175px;
  height: auto;
  padding: 2em;
  background-color: var(--notes-bg);
  box-shadow: 0px 3px 3px var(--notes-shadow);
  display: flex;
